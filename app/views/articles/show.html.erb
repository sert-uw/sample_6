<div class="col-md-6 col-md-offset-1">
  <p id="notice"><%= notice %></p>

  <p>
    <strong>Title:</strong>
    <%= @article.title %>
  </p>

  <p>
    <strong>Body:</strong>
    <%= @article.body %>
  </p>

  <p>
    <strong>Author:</strong>
    <%= @article.author %>
  </p>

  <%= link_to 'Edit', edit_article_path(@article) %> |
  <%= link_to 'Back', articles_path %>

  <%= form_for(:comment, url:article_comments_path(@article)) do |f| %>
    <div class="field">
      <%= f.label :author %><br>
      <%= f.text_field :author %>
    </div>
    <div class="field">
      <%= f.label :body %><br>
      <%= f.text_field :body %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>

  <p>
    コメント一覧
  </p>

  <% @article.comments.each do |comment| %>
    <p>
      <strong>Author:</strong>
      <%= comment.author %><br>
      <strong>Body:</strong>
      <%= comment.body %>
    </p>
  <% end %>
</div>
